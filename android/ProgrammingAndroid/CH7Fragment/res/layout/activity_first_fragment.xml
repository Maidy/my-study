<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstFragmentActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/hello_world" />
    
    <Button 
        android:id="@+id/first_fragment_doit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="24sp"
        android:text="@string/first_fragment_doit_text" />
        
    <FrameLayout 
        android:id="@+id/first_fragment_fragmentlayout_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/blue">
    </FrameLayout>
    
    <FrameLayout 
        android:id="@+id/first_fragment_fragmentlayout_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/green">
    </FrameLayout>

    <!-- 
    <fragment
        class="net.daum.suguni.programmingandroid.ch7fragment.fragment.DateTimeFragment"
        android:id="@+id/activity_first_fragment_fragment_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
 	-->
 	
</LinearLayout>
